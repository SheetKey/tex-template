% mdframed takes parameters (1) optional title; (2) name (i.e. "Theorem", "Lemma", etc.);
% (3) color; (4) title font type;
\newenvironment{mymdframed}[4][]{
  \refstepcounter{subsection}
  \ifstrempty{#1}
  {
    \mdfsetup{
      frametitle={
        \tikz[baseline=(current bounding box.east),outer sep=0pt]
        \node[anchor=east,rectangle,fill=#3]
        {\strut \thesubsection~#2};
      }
    }
  }
  {
    \mdfsetup{
      frametitle={
        \tikz[baseline=(current bounding box.east),outer sep=0pt]
        \node[anchor=east,rectangle,fill=#3]
        {\strut \thesubsection~#2:~#1};
      }
    }
  }
  \mdfsetup{
    innertopmargin=10pt,
    linecolor=#3,
    linewidth=2pt,
    topline=true,
    frametitleaboveskip=\dimexpr-\ht\strutbox\relax
    frametitlefont=#4
  }
  \begin{mdframed}[]\relax
  }
  {\end{mdframed}}

\newenvironment{mymdframed*}[4][]{
  \ifstrempty{#1}
  {
    \mdfsetup{
      frametitle={
        \tikz[baseline=(current bounding box.east),outer sep=0pt]
        \node[anchor=east,rectangle,fill=#3]
        {\strut #2};
      }
    }
  }
  {
    \mdfsetup{
      frametitle={
        \tikz[baseline=(current bounding box.east),outer sep=0pt]
        \node[anchor=east,rectangle,fill=#3]
        {\strut #2:~#1};
      }
    }
  }
  \mdfsetup{
    innertopmargin=10pt,
    linecolor=#3,
    linewidth=2pt,
    topline=true,
    frametitleaboveskip=\dimexpr-\ht\strutbox\relax
    frametitlefont=#4
  }
  \begin{mdframed}[]\relax
  }
  {\end{mdframed}}

